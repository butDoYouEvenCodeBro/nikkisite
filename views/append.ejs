<div class="img-gallery" id="gallery">
    <h3 class="gallery-title">Edit Gallery</h3>

    <div class="container ">

        <% for( let i = 0; i < images.length; i++ ) { %>
        <figure>
            <img id="myImg" src="/images/gallery/<%= images[i] %>" onerror="this.onerror=null; this.src='Default.jpg'"
                alt="">
            <form action="/append" method="post">
                <input type="hidden" name="img" id="img" value="<%= images[i] %>">
                <div class="dropdown">
                    <select onchange="this.form.submit()" name="art_type">
                        <option class="dropbtn">Art Style</option>
                        <div id="art-type" class="dropdown-content">
                            <%if(images[i].split('-').shift()==='digital'){ %>
                            <option selected value="digital">Digital Art</option>
                            <option value="sketchwork">Sketchwork</option>
                            <% } else { %>
                            <option value="digital">Digital Art</option>
                            <option selected value="sketchwork">Sketchwork</option>
                            <%}%>
                        </div>
                    </select>
                </div>
            </form>
            <form action="/delete" method="post">
            <div class="dropdown">
                <button type="submit" name="delete" value="<%= images[i] %>"><img src="/images/delete-icon.png"
                                alt=""></button>
                        </div>
            </form>
        </figure>
        <div id="myModal" class="modal">

            <!-- The Close Button -->
            <span class="close">&times;</span>

            <!-- Modal Content (The Image) -->
            <img class="modal-content" id="img01">

            <!-- Modal Caption (Image Text) -->
            <div id="caption"></div>
        </div>
        <% } %>


    </div>
</div>


